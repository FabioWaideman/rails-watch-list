


  <div class="card mb-3">
    <div class="card-body d-flex justify-content-between align-items-center">
      <h4 class="mt-2 flex-grow-1"><%= @list.name %></h4>
      <%= link_to "My Lists", root_path, class:"btn btn-success m-2"  %>
      <%=  link_to "Add Bookmark", new_list_bookmark_path(@list), class:"btn btn-success m-2" %>
    </div>
  </div>


  <% @list.bookmarks.each do |bookmark| %>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src= <%= bookmark.movie.poster_url %> class="card-img-top mw-25">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.comment %></p>
            <%= button_to "Delete", bookmark_path(bookmark.id), class:"btn btn-success ", method: :delete %>
          </div>
        </div>
      </div>
    </div>
  <% end %>







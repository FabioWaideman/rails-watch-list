<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to "Add Bookmark", new_list_bookmark_path(@list)%>

  <div class="container d-flex">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card-group col-2">
      <div class="card">
      <img src= <%= bookmark.movie.poster_url %> class="card-img-top mw-25">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= button_to "Delete", bookmark_path(bookmark.id), method: :delete %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to "Back", root_path %>

</div>
